{
  "name": "dreamcode",
  "version": "1.0.0",
  "description": "Static version of dreamcode.ca, which is meant to succeed Framer and all Rails-based versions. It will initially be hosted on Cloudflare Pages.",
  "main": "index.html",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:11ty": "npx @11ty/eleventy --serve",
    "dev:tailwind": "npx @tailwindcss/cli -i ./_src/assets/styles/tailwind.css -o ./_site/assets/styles/tailwind.css --watch",
    "build": "run-s build:*",
    "build:11ty": "npx @11ty/eleventy",
    "build:tailwind": "npx @tailwindcss/cli -i ./_src/assets/styles/tailwind.css -o ./_site/assets/styles/tailwind.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radman/dreamcode.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/radman/dreamcode/issues"
  },
  "homepage": "https://github.com/radman/dreamcode#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.1.17",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17"
  }
}
